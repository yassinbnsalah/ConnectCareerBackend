pipeline{
    agent any
    stages {
        stage('Install dependencies') {
            steps{
                script {
                    sh('npm install')
                }
            }
        }
        stage('Unit Test') {
            steps{
                script {
                    sh('npm test')
                }
            }
        }
        stage("MVN SONARQUBE"){
            steps{
                script{
                    try{
                        sh "mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=esprit"
                    }catch(Exception e){
                        error "Failed to run SonarQube analysis: ${e.message}"
                    }
                }
            }
        }
        stage('Build application') {
            steps{
                script {
                    sh('npm run build-dev  ')
                }
            }
        }
    }
}
