pipeline{
    agent any
    stages {
        stage('Install dependencies') {
            steps{
                script {
                    sh('npm install')
                }
            }
        }
        stage('Unit Test') {
            steps{
                script {
                    sh('npm test')
                }
            }
        }
       stage('SonarQube Analysis') {
            steps{
                script { 
                    def scannerHome = tool 'scanner'
                        withSonarQubeEnv {
                            sh "${scannerHome}/bin/sonar-scanner \
                                -Dsonar.projectKey=twinerzBackend"
                        }
                    } 
                } 
            }   
        stage('Build') {
            steps {
                script {
                    docker.build("backend-connctcareer", "-f Dockerfile .")
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    docker.withRegistry('http://192.168.33.10:8083', 'docker-credentials') {
                        docker.image("backend-connctcareer").push()
                    }
                    sh('docker-compose up -d')
                }
            }
        }

        stage('Building images (node and mongo)') {
            steps{
                script {
                    sh(' docker compose build')
                }
            }
        }
    }
}
