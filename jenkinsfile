pipeline {
    agent any

    environment {
        registryCredentials = 'nexus'
        registry = '172.16.5.241:8083'
    }

    stages {
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Unit Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('Building images (node and mongo)') {
            steps {
                sh 'docker compose build'
            }
        }

        stage('Deploy to Nexus') {
            steps {
                script {
                   
                        sh 'docker push ${registry}/nodemongoapp:5.0'
                   
                }
            }
        }
    }
}
