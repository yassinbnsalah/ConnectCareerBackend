pipeline {
    agent any

    environment {
        registryCredentials = "nexus"
        registry = "172.16.5.241:8081"
    }

    stages {
        stage('Install dependenciess') {
            steps {
                sh 'npm install'
            }
        }

        stage('Unit Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh 'sonar-scanner -Dsonar.projectKey=twinerzBackend'
                }
            }
        }

        stage('Building images (node and mongo)') {
            steps {
                sh 'docker compose build'
            }
        }

    }
}