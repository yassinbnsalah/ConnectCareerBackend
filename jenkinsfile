pipeline {
    agent any

    environment {
        registryCredentials = 'nexus'
        registry = '172.16.5.241:8083'
    }

    stages {
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Unit Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('Building images (node and mongo)') {
            steps {
                sh 'docker compose build'
            }
        }

stage('Deploy to Nexus') {
    steps {
        withCredentials([
            usernamePassword(credentialsId: registryCredentials, passwordVariable: 'REGISTRY_PASSWORD', usernameVariable: 'REGISTRY_USERNAME')
        ]) {
            withEnv(["REGISTRY_PASSWORD=${MASKED}"]) {
                sh '''
                    docker login -u $REGISTRY_USERNAME --password-stdin $registry <<< "$REGISTRY_PASSWORD"
                    docker push $registry/nodemongoapp:5.0
                '''
            }
        }
    }
}
    }
}