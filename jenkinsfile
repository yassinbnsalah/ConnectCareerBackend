pipeline{
    agent any

    environment {
        registryCredentials = "nexus"
        registry = "172.16.5.241:8081"
    }
    stages {
        stage('Install dependencies') {
            steps{
                script {
                    sh('npm install')
                }
            }
        }
        stage('Unit Test') {
            steps{
                script {
                    sh('npm test')
                }
            }
        }
       stage('SonarQube Analysis') {
            steps{
                script { 
                    def scannerHome = tool 'scanner'
                        withSonarQubeEnv {
                            sh "${scannerHome}/bin/sonar-scanner \
                                -Dsonar.projectKey=twinerzBackend"
                        }
                    } 
                } 
            }   

        stage('Building images (node and mongo)') {
            steps{
                script {
                    sh(' docker compose build')
                }
            }
        }
        stage('Deploy to Nexus') {
            steps{ 
                script {
                       withCredentials([
                usernamePassword(credentialsId: 'nexus', passwordVariable: 'esprit', usernameVariable: 'admin')
            ])
                    docker.withRegistry("http://"+registry,
                    , 'docker-credentials' ) {
                        sh("docker login -u admin -p esprit 172.16.5.241:8081")
                        sh('docker push $registry/nodemongoapp:5.0 ')
                        }
                    }
                }
            }

    }
}
